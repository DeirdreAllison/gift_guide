<h1>New gift</h1>

<%= form_for @gift do |form| %>

<%= form.label :title, "Item" %>
<%= form.text_field :title %>
<br>
<%= form.label :description %>
<%= form.text_area :description %>
<br>
<%= form.label :price %>
<%= form.text_field :price %>
<br>
<%= form.label :url %>
<%= form.url_field(:user, :homepage) %>
<br>
<%= form.submit "Add Item" %>

<% end %>
